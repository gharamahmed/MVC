<html>
<head>
    <title>Add Department</title>
</head>
<body>
    <h1 style="text-align:center">Add Department</h1>

    <form style="text-align:center" action="Add">
        <div style="margin:10px">
            <label>Name</label>
            <input id="Name" name="Name" type="text" />
        </div>
        <div style="margin:10px">
            <label>Start Date</label>
            <input id="startdate" name="startdate" type="text" />
        </div>
        <div style="margin:10px">

            <label>Manager</label>
            <select id="Manager" name="employeeSSN">
                <option value="">Choose Super</option>
                @foreach (var ins in Model)
                {
                    <option value="@ins.SSN">@ins.Fname</option>
                }
            </select>
        </div>
       
      
        <div style="margin:10px">

            <input type="submit" value="Add" />
        </div>
    </form>
</body>
</html>