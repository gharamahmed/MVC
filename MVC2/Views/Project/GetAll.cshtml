<html>
<head>
    <title>Projects</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 80%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
    </style>
</head>
<body>
    <h2>data Projects</h2>
    @*<p style="text-align:center ;color :purple">@TempData["msg"]</p>*@
    <table>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Department Id</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td><a href="Edit/@item.Number" style="text-decoration:none">@item.Name</a></td>
                <td>@item.Location</td>
                <td>@item.DepartmentId</td>
            </tr>
        }
    </table>
    <a class="btn btn-primary" role="button" href="AddProject">Add Project</a>

</body>
</html>
