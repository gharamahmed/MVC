<html>
<head>
    <title>ADD Dependent</title>
</head>
<body >
    <h1 style="text-align:center">Add Dependence</h1>

    <form style="text-align:center" action="Add">
        <div style="margin:10px">
            <label>Name</label>
            <input id="Name" name="Name" type="text" />
        </div>
        <div style="margin:10px">
            <label>Birthdate</label>
            <input id="Birthdate" name="Birthdate" type="text" />
        </div>
        <div style="margin:10px">

            <label>RelationShip</label>
            <input id="RelationShip" name="Relationship" type="text" />
        </div>
        <div style="margin:10px">
           <label>Gender</label>
            <input type="radio" id="Male" name="Sex" value="Male">
            <label for="Male">Male</label>
            <input type="radio" id="Female" name="Sex" value="Female">
            <label for="Female">Female</label>
        </div>
        <div style="margin:10px">
        
        </div>
        <div style="margin:10px;visibility:hidden">
            <label>ESSN</label>
            <input id="ESSN" name="ESSN" type="text" value="@Context.Session.GetInt32("SSN")" />
        </div>
        <div style="margin:10px">

            <input type="submit" value="Add" />
        </div>
    </form>
</body>
</html>
