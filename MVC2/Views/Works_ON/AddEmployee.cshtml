<html>
<head>
    <title>Add Employee</title>
</head>
<body>
    <h1 style="text-align:center">Add Employee  </h1>

    <form style="text-align:center" action="Add">
        <div style="margin:10px">
            <label>Hours</label>
            <input id="Name" name="Hours" type="number" />
        </div>
        <div style="margin:10px">
            <label>Employee</label>
            <select id="ESSN" name="ESSN">
                <option value="">Choose Employee</option>
                @foreach (var ins in ViewBag.Employees)
                {
                    <option value="@ins.SSN">@ins.Fname</option>
                }
            </select>
        </div>
        <div style="margin:10px">
            <label>Projects</label>
            <select id="Pnum" name="Pnum" multiple>
                <option value="">Choose Projects</option>
                @foreach (var ins in ViewBag.Projects)
                {
                    <option value="@ins.Number">@ins.Name</option>
                }
            </select>
        </div>


        <div style="margin:10px">

            <input type="submit" value="Add" />
        </div>
    </form>
</body>
</html>