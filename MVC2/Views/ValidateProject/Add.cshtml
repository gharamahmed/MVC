@model ProjectVM

<form asp-action="Add" asp-controller="ValidateProject" method="post">

    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />

        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
       <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />

        <div>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="confirmLocation"></label>
        <input asp-for="confirmLocation" class="form-control" />

        <div>
            <span asp-validation-for="confirmLocation" class="text-danger"></span>
        </div>
    </div>

    <label asp-for="DepartmentId"></label>
    
    @Html.DropDownList("DepartmentId",ViewBag.departments as SelectList,"choose one",new {@class="form-control"})
    @*<select asp-for="DepartmentId" asp-items="ViewBag.departments" class="form-control">
        <option value="">Choose One</option>
    </select>*@

    <input type="submit" value="Add" />
</form>
@section Scripts{

    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}