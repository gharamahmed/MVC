@{
    int i = 1;
}
<a asp-action="Add" asp-controller="ValidateProject">Add Project</a>
<h2>data Projects</h2>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Location</th>
            <th>Department Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>@item.DepartmentId</td>
                <td><a asp-action="Edit" asp-controller="ProjectHelper" asp-route-id="@item.Number">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
