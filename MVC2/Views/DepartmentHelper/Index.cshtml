@{
    int i = 1;
}
@Html.ActionLink("Add Department","Add","DepartmentHelper")
<h2>data Departments</h2>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Start Date</th>
            <th>Manager Employee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Name</td>
                <td>@item.startdate</td>
                <td>@item.employeeSSN</td>
                <td>@Html.ActionLink("Edit","Edit","DepartmentHelper",new {Id = item.Number})</td>
            </tr>
        }
    </tbody>
</table>
