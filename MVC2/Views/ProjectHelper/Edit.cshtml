@model project

<form asp-action="EditProject" asp-controller="ProjectHelper" method="post">

    <input asp-for="Number" class="form-control" value="@Model.Number" style="visibility:hidden"/>

    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Location"></label>
    <input asp-for="Location" class="form-control" value="@Model.Location" />

  

    <label asp-for="DepartmentId"></label>
    <select asp-for="DepartmentId" asp-items="ViewBag.departments" class="form-control">
        <option value="">Choose One</option>
    </select>

    <input type="submit" value="Edit" />
</form>